<%= form_for(@user, :html => { :class => "well form-horizontal" }) do |f| %>
	<%= f.text_field :nome %>
	<%= f.text_field :email %>
	<%= f.password_field :password %>
	<%= f.password_field :password_confirmation %>
	<% @roles.each do |role| %>
		<input type="checkbox" name="user[roles][]" value="<%= role.id %>" <%= checked?(@user, role) %>><%= role.name%>
	<% end %>
	<%#= select(:user, :roles, @roles.collect {|p| [ p.name, p.id ] }, {:include_blank => 'Selecione'})%>
	<%= f.submit "Cadastrar" %>
<% end %>