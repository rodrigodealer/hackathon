<%= form_for(@user, :html => { :class => "well form-horizontal" }) do |f| %>
	<%= f.text_field :nome %>
	<%= f.text_field :email %>
	<%= f.password_field :password %>
	<%= f.password_field :password_confirmation %>
	<%= select(:user, :roles, @roles.collect {|p| [ p.name, p.id ] }, {:include_blank => 'Selecione'})%>
	<%= f.submit "Cadastrar" %>
<% end %>